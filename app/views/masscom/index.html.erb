<% for number in @numbers do %>
  <div>
    <p style="display:inline"><%= number.name %> : <%= number.number %> : <%= number.email %></p>
    <form action="/delete_number/" method="POST" style="display:inline">
      <input type="hidden" name="id" value="<%= number.id %>">
      <input type="submit" value="Delete this number!">
    </form>
    <form action="/edit_number/<%= number.id %>" style="display:inline">
      <input type="submit" value="Edit this number!">
    </form>
  </div>
<% end %>

<script type="text/javascript">
function countChars(countfrom,displayto) {
  var len = document.getElementById(countfrom).value.length;
  document.getElementById(displayto).innerHTML = len;
}
</script>
